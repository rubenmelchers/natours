// Header
header.header
    nav.nav.nav--tours
        a(href='/').nav__el All tours
        form.nav__search
            button
            input(type="text" placeholder='Search tours').nav__search-input
    .header__logo
        img(src="/img/logo-white.png" alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out 
            a(href="/me").nav__el
                img(src=`/img/users/${user.photo}` alt=`${user.name}`).nav__user-img
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/sign-up') Sign up